{{!< default}}

{{> header}}

<main id="site-main" class="site-main">
    <section class="my-5 post-feed post-feed-tag container">
        <div class="row">
            <div class="col-lg-3 col-xl-2 pe-xl-4 pb-5">
                <div class="sticky-lg-top">
                    {{#tag}}
                        <h2 class="h3 mb-4">{{name}}</h2>
                        {{#if description}}
                            <p>{{description}}</p>
                        {{/if}}
                    {{/tag}}
                </div>
            </div>
            <div class="col-lg-9 col-xl-10">
                <div class="row">
                    <div class="col-12">
                        <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-2 row-cols-xl-2">
                            {{#foreach posts limit=9}}
                                {{> "post-card"}}
                            {{/foreach}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
